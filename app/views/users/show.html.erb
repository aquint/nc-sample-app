<div class="container profile">
	<div class="row">
		<div class="col-md-12">
			<h1><%= @user.name %></h1>
			<% if current_user?(@user) %>
				<h1><small><%= @user.email %></h1></small>
			<% end %>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-6">
		    <h3><% if current_user?(@user) %><%= 'My ' %> <% end %><%= @title %></h3>
		    <% if @teams.any? %>
		      <ul class="users">
		        <% @teams.each do |team| %>
		        <li><%= link_to team.name, team %></li>
		        <% end %>
		      </ul>
		    <% end %>
		</div>
		<div class="col-md-6">
		    <h3><% if current_user?(@user) %><%= 'My ' %> <% end %><%= 'Tasks' %></h3>
		    <% if @task_lists.any? %>
		      <ul class="users">
		        <% @task_lists.each do |task_list| %>
		        <li>
		        	<%= link_to task_list.title, task_list %>
		        	<p><%= task_list.description %></p>
		        </li>
		        <% end %>
		      </ul>
		    <% end %>
		</div>
	</div>
	<% if current_user?(@user) %>
	<div class="row">
		<div class="col-md-4">
			<h1>Create a task list</h1>
			<%= render 'task_lists/form' %>
		</div>
	</div>
	<% end %>
</div>