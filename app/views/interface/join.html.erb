<div class="container join">
	<div class="row">
		<div class="col-md-6 col-md-offset-3">
			<h1><%= @team.name %></h1>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-6">
			<h1>Team Members</h1>
			<ul class="team-users">
			  <% @team_users.reverse_each do |user| %>
			    <li>
			      <p><%= l user.created_at, format: :short %></p>
			      <%= link_to user.name, user %>
			    </li>
			  <% end %>
			</ul>
		</div>
		<div class="col-md-6">
			<h1>All Users</h1>
			<ul class="users">
			  <% @all_users.reverse_each do |user| %>
			    <li>
			      <%= link_to user.name, user %>
			      <%= render 'users/join_form', user: user, team: @team %>
			    </li>
			  <% end %>
			</ul>
		</div>
	</div>
</div>