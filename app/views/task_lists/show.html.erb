<div class="container">
	<div class="row">
		<div class="col-md-12"> 
			<h2>Task: <%= @task_list.title %></h2>
			<h4>Description: <%= @task_list.description %></h4>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-6">
			<h3> To Do</h3>
			<ul class="items-todo">
				<% @items.each do |item| %>
					<% if !item.completed? %>
						<li>
							<h4><%= item.content %></h4>
							<%= link_to "Delete", task_list_item_path(@task_list, item.id), method: :delete %>
							<%= link_to "Mark as complete", complete_task_list_item_path(@task_list, item.id), method: :patch %>
						</li>
					<% end %>
				<% end %>
			</ul>
		</div>
		<div class="col-md-6">
			<h3>Completed</h3>
			<ul class="items-complete">
				<% @items.each do |item| %>
					<% if item.completed? %>
						<li>
							<h4><%= item.content %></h4>
							<%= link_to "Delete", task_list_item_path(@task_list, item.id), method: :delete %>
						</li>
					<% end %>
				<% end %>
			</ul>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-12"> 
			<div class="new-task">
				<%= render 'items/item_form' %>
			</div>
		</div>
	</div>
	<hr>
	<div class="row">
		<div class="col-md-12"> 
			<%= link_to 'Back', task_lists_path %>
		</div>
	</div>
</div>


